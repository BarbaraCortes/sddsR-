			$(function() {
		    	sliderCaaso = new slider("slides_sociocaaso", Math.floor((<%=sociocaaso.length%> + 2)/3));
				sliderCaaso.showSlides();

		    	sliderFederal = new slider("slides_sociofederal", Math.floor((<%=sociofederal.length%> + 2)/3));
				sliderFederal.showSlides(); 

				sliderAtleticaaso = new slider("slides_socioatleticaaso", Math.floor((<%=socioatleticaaso.length%> + 2)/3));
				sliderAtleticaaso.showSlides();

			});
