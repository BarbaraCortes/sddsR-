<html>
	<head>
		<%-include bootstrap.ejs %> <!-- inclui o bootstrap -->

		<link rel="stylesheet" type="text/css" href="slick/slick.css"/>
		<link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>

		<style type="text/css">
			body {
				background-color: #DDDDDD;
				text-align: justify;
			}
			.img-logo {
				max-width: 100%; 
				height: auto;
				margin: 15px;
			}
			.content{
			    position: relative;
			    width: 98%;
			    height: 98%;

			    margin-left: auto;
			    margin-right: auto;
			    margin-top: auto;
			    margin-bottom: auto;
			}
		</style>
		<title> Dicas </title>
	</head>
	<body>
		<%-include navbar.ejs%>
		<div id="img" style = "width: 100%;">
			<img src="barra.jpg" style = "max-width: 100%; height: auto;">
		</div>

		<!-- Sessao de icones -->
		<div class = "container">
			<br>
			<div class="row">
				<div class = "col-md-4 col-sm-4">
					<center>
						<a href="#aplicativos"><img src="like.png" style = "max-width: 33%; height: auto; margin: 20px" class = "img-logo"></a>
					</center>
					<br>
					<h3 style="text-align: center"> Aplicativos </h3>
				</div>
				<div class = "col-md-4 col-sm-4">
					<center> 
						<a href = "#videos"><img src="youtube.png" style = "max-width: 33%; height: auto; margin: 20px" class = "img-logo"></a>
					</center>
					<br>
					<h3 style="text-align: center"> Vídeos </h3>
				</div>
				<div class = "col-md-4 col-sm-4">
					<center> 
						<a href="#restaurantes"><img src="restaurante.png" style = "max-width: 33%; height: auto; margin: 20px" class = "img-logo"></a>
					</center>
					<br>
					<h3 style="text-align: center"> Restaurantes </h3>
				</div>
			</div>	
		</div>
		<br>

		<!-- Sessao de aplicativos -->
		<div class = "container-fluid" id = "aplicativos">
			<h3 style = "margin-left: 50px"> Aplicativos </h3>
		</div>
		<div class="container-fluid slides_app" style="background: #FFFFFF; width: 96%; height: 250px">
			<%for (var i = 0; i < apps.length; ++i) {%>
				<div id = "<%= apps[i].id %>">
					<div class = "col-md-3 col-sm-3">
						<center> 
							<img src="<%= apps[i].img %>" style = "max-width: 33%; height: auto; margin-top: 60px;">
						</center>
						<h4 style = "color: blue; text-align: center"><a href = "<%= apps[i].link %>"><%= apps[i].name %></a></h4>
						<br>
					</div>
					<div class = "col-md-3 col-sm-3">
						<h4 style = "margin-top: 65px"> <%= apps[i].desc %></h4>
					</div>
					<div class = "col-md-3 col-sm-3">
						<a href='<%= apps[i].play_link %>'><img alt='Disponível no Google Play' src='https://play.google.com/intl/en_us/badges/images/generic/pt-br_badge_web_generic.png' style = "width: 60%;position:absolute;
							left:25%;
							margin-top:80px;"/></a>
					</div>
					<div class = "col-md-3 col-sm-3">
						<a href='<%= apps[i].app_link %>'><img src = "apple.svg" style = "width: 50%; position:absolute;
							left:25%;
							margin-top:90px;"></a>
					</div>
				</div>
			<% } %>
		</div>
		<br>
		<br>


		<!-- Sessao de videos -->
		<div class = "container-fluid" style="background: #DDDDDD; width:100%" id = "videos">
			<h3 style = "margin-left: 50px"> Vídeos </h3>
		</div>
		<div class=" container-fluid slides_vids" style = "background: #FFFFFF; width: 96%; height: 270px"> 
			<% for(var i = 0; i < videos.length; ++i) {%>
				<div style="margin-right: 20px;">
					<center>
						<iframe width="380" height="230" src="<%=videos[i]%>" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen style = "margin: 20px; max-width: 100%"></iframe>
					</center>
				</div>
			<%}%>
		</div>
		<br>

		<!-- Sessao de restaurantes -->
		<div class="container-fluid" style="id="restaurantes">
			<h3 style = "margin-left: 50px"> Restaurantes </h3>
		</div>
		<div class = "container-fluid slides_rest" style="background: #FFFFFF; width:96%; height: 230px" >
			<%for(var i = 0; i < restaurantes.length; ++i) {%>
				<div>
					<div class = "col-md-3 col-sm-3">
						<center> 
							<img src="<%= restaurantes[i].img%>" style = "max-width: 50%; height: auto; margin-top: 40px">
						</center>
						<h4 style = "color: black; text-align: center"> <%= restaurantes[i].name %> </a></h4>
					</div>
					<div class = "col-md-5 col-sm-5">
						<h4 style = "margin: 10px; margin-top: 60px"> <%= restaurantes[i].desc %> </h4>
					</div>
					<div class = "col-md-3 col-sm-3">
					<a href='<%= restaurantes[i].face_link %>'><img alt='Pagina do Facebook' src='http://www.tenhomaisdiscosqueamigos.com/wp-content/uploads/2015/07/facebook.jpg' style = "width: 40%;position:absolute; left:15%; margin-top:70px;" /> </a>
					</div>
					<div class = "col-md-3 col-sm-3">
					<a href='<%= restaurantes[i].ifood_link %>'><img alt='Link do Ifood' src='https://images-na.ssl-images-amazon.com/images/I/51b3GBnw0UL.png' style = "width: 30%;position:absolute; left:80%; margin-top:55px;"/> </a>
					</div>
				</div>
			<%}%>
			</div>
			<br>
			<br>
		</div>

		<%- include footer.ejs %>

		<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.0.min.js"></script>
		<script type="text/javascript" src="https://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
		<script type="text/javascript" src="slick/slick.min.js"></script>

		<script type="text/javascript">
		    $(document).ready(function(){
		      	$('.slides_app').slick({
		        	infinite: true,
					slidesToShow: 1,
					slidesToScroll: 1,
					autoplay: false,
					autoplaySpeed: 2500,
					dots: true
		      	});
		      	$('.slides_vids').slick({
		        	infinite: true,
					slidesToShow: 3,
					slidesToScroll: 3,
					autoplay: false,
					autoplaySpeed: 2500,
					dots: true
		      	});
		      	$('.slides_rest').slick({
		        	infinite: true,
					slidesToShow: 1,
					slidesToScroll: 1,
					autoplay: true,
					autoplaySpeed: 2500,
					dots: true
		      	});
		    });
		</script>

	</body>
</html>

